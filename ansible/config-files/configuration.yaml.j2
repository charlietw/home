# Allow home assistant autodiscovery, see https://www.zigbee2mqtt.io/guide/usage/integrations/home_assistant.html
homeassistant: true

# Let new devices join our zigbee network
permit_join: false

# Check devices are actually available
availability: true

# Docker Compose makes the MQTT-Server available using "mqtt" hostname
mqtt:
  base_topic: zigbee2mqtt
  server: mqtt://ubuntu-rpi:1883
# Zigbee Adapter path
serial:
  port: /dev/ttyUSB0
# Enable the Zigbee2MQTT frontend
frontend:
  port: 8080
advanced:
  pan_id: GENERATE
  ext_pan_id: GENERATE
  network_key: {{ NETWORK_KEY }} # can be changed to GENERATE to create a new one

