# Let new devices join our zigbee network
permit_join: true
# Docker Compose makes the MQTT-Server available using "mqtt" hostname
mqtt:
  base_topic: zigbee2mqtt
  server: mqtt://ubuntu-rpi:1883
# Zigbee Adapter path
serial:
  port: /dev/ttyUSB0
# Enable the Zigbee2MQTT frontend
frontend:
  port: 8080
advanced:
  network_key: {{ NETWORK_KEY }} # can be changed from {{ NETWORK_KEY }} to GENERATE to create a new one